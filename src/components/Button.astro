---
const { variant, url, text } = Astro.props;
---

<!-- Composant Button avec différentes variantes -->
<a href={url} class={`btn ${variant === 'outlined' ? 'btn-outlined' : ''} ${variant === 'dark' ? 'btn-dark' : ''} py-2 px-4 rounded-md text-center`}>
  {text}
</a>

<style>
  /* Styles de base pour tous les boutons */
  .btn {
    display: inline-block;
    font-size: 1rem;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  /* Style pour le bouton avec la variante 'outlined' */
  .btn-outlined {
    border: 2px solid #333;
    background-color: transparent;
    color: #333;
  }

  .btn-outlined:hover {
    background-color: #333;
    color: white;
  }

  /* Style pour le bouton avec la variante 'dark' */
  .btn-dark {
    background-color: #333;
    color: white;
    border: 2px solid transparent;
  }

  .btn-dark:hover {
    background-color: #555;
  }

  /* Styles généraux de boutons */
  .py-2 {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .px-4 {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .rounded-md {
    border-radius: 0.375rem;
  }

  .text-center {
    text-align: center;
  }
  <!-- Bouton Menu (burger) -->
<button
  id="menu-btn"
  aria-label="Menu"
  aria-expanded={ariaExpanded}
  onClick={onClick}
  class="relative z-10 flex flex-col justify-between items-center w-8 h-8 bg-transparent border-none cursor-pointer transition duration-300"
>
  <span class={`block w-full h-1 bg-black transition-transform duration-300 ${ariaExpanded === 'true' ? 'rotate-45 translate-y-2' : ''}`}></span>
  <span class={`block w-full h-1 bg-black transition-transform duration-300 ${ariaExpanded === 'true' ? '-rotate-45 -translate-y-2' : ''}`}></span>
</button>

<style>
  /* Les barres du bouton du menu */
  button span {
    display: block;
    width: 100%;
    height: 2px;
    background-color: #000;
    transition: all 0.3s ease;
  }

  /* Transitions pour la rotation des barres */
  .rotate-45 {
    transform: rotate(45deg);
  }

  .-rotate-45 {
    transform: rotate(-45deg);
  }

  .translate-y-2 {
    transform: translateY(0.5rem);
  }

  .-translate-y-2 {
    transform: translateY(-0.5rem);
  }

</style>