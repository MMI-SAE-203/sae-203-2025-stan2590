---
import logo1 from '../assets/youtube (1).png';
---


<footer class="bg-gray-900 text-white py-8">
  <div class="container mx-auto px-6">
    <!-- Section principale du footer -->
    <section class="text-center mb-8">
      <header class="mb-6">
        <h3 class="text-xl font-Shrikhand font-semibold">Rejoins-nous !</h3>
      </header>
      
      <!-- Formulaire d'inscription à la newsletter -->
      <div class="flex justify-center mb-6">
        <input type="email" class="email-input px-4 py-2 rounded-l-md border-2 border-gray-400" placeholder="Entrez votre email">
        <button class="submit-btn px-4 py-2 rounded-r-md bg-blue-500 text-white hover:bg-blue-600 transition-colors">S'inscrire</button>
      </div>

      <!-- Liens de navigation -->
      <div class="text-sm mb-6">
        <ul class="flex justify-center gap-6">
          <li><a href="index.html" class="text-white hover:text-blue-500">Accueil</a></li>
          <li><a href="nous contacter.html" class="text-white hover:text-blue-500">Nous contacter</a></li>
          <li><a href="a propos.html" class="text-white hover:text-blue-500">À propos</a></li>
          <li><a href="terms-conditions.html" class="text-white hover:text-blue-500">Termes et Conditions</a></li>
        </ul>
      </div>

      <!-- Section des réseaux sociaux -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold mb-3">Nous contacter</h3>
        <ul class="flex justify-center gap-6">
          <li><a href="#" aria-label="Instagram"><img {logo1.src} alt="Instagram" class="w-6 h-6"/></a></li>
          <li><a href="#" aria-label="Facebook"><img src="/assets/icon/Vector (1).png" alt="Facebook" class="w-6 h-6"/></a></li>
          <li><a href="#" aria-label="YouTube"><img src="/assets/icon/youtube.png" alt="YouTube" class="w-6 h-6"/></a></li>
          <li><a href="#" aria-label="Strava"><img src="/assets/icon/image 5.png" alt="Strava" class="w-6 h-6"/></a></li>
        </ul>
      </div>

      <!-- Mentions légales -->
      <div>
        <ul class="text-sm">
          <li><a href="mentionslegal.html" class="text-white hover:text-blue-500">Mentions légales</a></li>
        </ul>
      </div>
    </section>
  </div>
</footer>


