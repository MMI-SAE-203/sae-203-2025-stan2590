---
const { title, description, image, url, date } = Astro.props;
---

<a href={url} class="block bg-white rounded-lg shadow-md overflow-hidden transform transition hover:scale-105">
  <img class="w-full h-48 object-cover" src={image} alt={title} />
  <div class="p-4">
    <h2 class="text-xl font-bold">{title}</h2>
    <p class="text-gray-600">{description}</p>
    <h3 class="text-xl font-bold">{date}</h3>
  </div>
</a>

