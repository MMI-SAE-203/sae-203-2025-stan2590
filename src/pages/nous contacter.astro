---
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <slot />
    <form class="w-full max-w-lg mx-auto bg-white p-6 rounded-2xl shadow-lg" action="#" method="POST">
        <h1 class="text-2xl font-bold text-center mb-4">Contact</h1>
        
        <div class="mb-4">
            <label for="nom" class="block text-gray-700 font-semibold">Nom</label>
            <input type="text" id="nom" name="nom" placeholder="Votre nom" required 
                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        
        <div class="mb-4">
            <label for="prenom" class="block text-gray-700 font-semibold">Prénom</label>
            <input type="text" id="prenom" name="prenom" placeholder="Votre prénom" required 
                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        
        <div class="mb-4">
            <label for="telephone" class="block text-gray-700 font-semibold">Téléphone</label>
            <input type="tel" id="telephone" name="telephone" placeholder="Votre téléphone" required 
                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        
        <div class="mb-4">
            <label for="mail" class="block text-gray-700 font-semibold">Mail</label>
            <input type="email" id="mail" name="mail" placeholder="Votre email" required 
                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        
        <div class="mb-4">
            <label for="message" class="block text-gray-700 font-semibold">Message</label>
            <textarea id="message" name="message" placeholder="Votre message" required 
                      class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 h-32"></textarea>
        </div>
        
        <button type="submit" class="w-full bg-blue-500 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-600">
            Envoyer
        </button>
        
        <p class="text-center text-gray-600 mt-4">
            03 58 15 95 63 <br> cavatrailer@gmail.com <br> 90000 Belfort
        </p>
    </form>
</Layout>
